<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.juntillak.courtcounter.CourtCounter"
    android:background="#3c423c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:text="Team Turtle"
                android:id="@+id/Edit1"
                android:hint="Team 1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="@android:color/black"
                android:background="#7442f4"
                android:gravity="center"
                android:padding="20dp"/>

            <TextView
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                android:background="#FF5733"
                android:gravity="center"
                android:padding="10dp" />

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="@android:color/black"
                android:background="#87b291"
                android:gravity="center"
                android:padding="30dp"/>

            <Button
                android:text="+1"
                android:onClick="addPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="100dp"/>

            <Button
                android:text="-1"
                android:onClick="negativePoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:text="Team Squrtl"
                android:id="@+id/Edit2"
                android:hint="Team 2"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="@android:color/black"
                android:background="#f44242"
                android:gravity="center"
                android:padding="20dp"/>

            <TextView
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                android:background="#42f46b"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/goals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="@android:color/black"
                android:background="#a5ffba"
                android:gravity="center"
                android:padding="30dp"/>

            <Button
                android:text="+1"
                android:onClick="addPoint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="100dp"/>

            <Button
                android:text="-1"
                android:onClick="negativePoint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="100dp"/>

        </LinearLayout>



    </LinearLayout>


    <Button
        android:text="+1"
        android:onClick="reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="100dp"/>

        </LinearLayout>
